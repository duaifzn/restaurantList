<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <form action="/restaurants/{{restaurant.id}}/edit?_method=PUT" method="POST">
        <div class="input-group mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            名稱：
          </span>
          <input type="text" class="form-control" name="name" value="{{restaurant.name}}">
        </div>
        <div class="input-group mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" class="form-control" name="category" value="{{restaurant.category}}">
        </div>

        <div class="input-group mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" class="form-control" name="location" value="{{restaurant.location}}">
        </div>
        <div class="input-group mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            google地圖：
          </span>
          <input type="text" class="form-control" name="google_map" value="{{restaurant.google_map}}">
        </div>

        <div class="input-group mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" class="form-control" name="phone" value="{{restaurant.phone}}">
        </div>

        <div class="input-group mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            敘述：
          </span>
          <textarea class="form-control" name="description"
            id="validationTextarea">{{restaurant.description}}</textarea>
        </div>

        <div class="input-group mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            圖片：
          </span>
          <input type="text" name="image" class="form-control" value="{{restaurant.image}}">
        </div>
        <div class="input-group mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            評分：
          </span>
          <input type="text" name="rating" class="form-control" value="{{restaurant.rating}}">
        </div>
        <div>
          <div>
            <button type=" submit">edit</button>
          </div>
      </form>
    </div>
  </div>
</div>